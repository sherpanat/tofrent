<h3 class="text-center mt-5">Faire une demande d'adh√©sion</h3>

<div class="container">
  <div class="row">
    <div class="mx-auto w-50 m-3" data-controller="visibility">
      <%= simple_form_for @registration_membership, method: :post do |f| %>
        <%= f.input :email, placeholder: 'Votre email', wrapper_html: { class: "col-xs-4" }, input_html: { class: "col-xs-8" }, label: false %>
        <%= f.input :content, placeholder: 'Comment avez-vous connu le site ? Qui vous recommande ?', wrapper_html: { class: 'd-none', data: { target: "visibility.invisible" } }, label: false %>
        <%= button_tag type: 'submit', class: 'btn btn-danger d-none', data: { target: "visibility.invisible" } do %>
          Envoyer ma demande d'inscription
          <%= fa_icon "network-wired", class: 'mx-2', size: '1x' %>
        <% end %>
        <div class='btn btn-danger' data-action="click->visibility#switch" data-target="visibility.visible">
          Remplir ma demande d'inscription
        </div>
      <% end %>
    </div>
  </div>
</div>
